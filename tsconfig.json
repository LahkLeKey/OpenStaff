{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,

    // Modern module resolution for Bun or Vite
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Strong typing + file safety
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    // Alias support
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
