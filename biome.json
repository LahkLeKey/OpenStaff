{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",

  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },

  "organizeImports": {
    "enabled": true
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },

  "files": {
    "ignore": [
      "node_modules/**/*",
      "dist/**/*",
      "build/**/*",
      "coverage/**/*",
      ".next/**/*",
      ".turbo/**/*",
      "src/components/ui/**/*",
      "build.ts"
    ],
    "maxSize": 4194304
  }
}
